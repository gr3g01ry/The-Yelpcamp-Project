<% layout('layouts/boilerplate.ejs') %>
    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="row mx-auto">
            <div class="col-md-6  col-xl-10 mx-auto">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1499243085368-45e4b97119c4?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NjJ8fHdvbWFuJTIwdHJhdmVsfGVufDB8fDB8fHww" alt="An escape view" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="post" class="needs-validation" novalidate>
                            <div>
                                <div class="mb-3">
                                    <label for="username" class="form-label">username</label>
                                    <input type="text"  class="form-control" name="username" id="username" required autofocus>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please choose a username.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">email</label>
                                    <input type="email"  class="form-control" name="email" id="email" required></textarea>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please enter a valid email.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">password</label>
                                    <input type="password"  class="form-control" name="password" id="password" required></textarea>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please enter a valid password.
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Add new User</button>
                            <a href="/campgrounds" class="btn btn-danger float-end"> Register later</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>